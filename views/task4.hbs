<!--contain-->
<div class="container">
{{#if isMenu}}
        <h1 class="text-center">Zodiac Characteristics</h1>
        <div class="row">
                {{#each zodiacs}}
                    <div class="col-md-3">
                        <a href="/task4/{{name}}">
                            <img src="images/{{imagePath}}" alt="{{name}}" class="img-circle img-thumbnail">
                            <h2 class="text-center">{{name}}<br />
                                <small>{{dates}}</small>
                                </br />
                            </h2>
                        </a>
                    </div>
                {{/each}}

        </div>
{{else}}
    <h1 class="text-center">{{detail.name}} Characteristics</h1>
    <div class="container-fluid well span6">
        <div class="row">
            <div class="col-md-4">
                <img src="../html/images{{detail.imagePath}}" class="img-circle" />
            </div>

            <div class="col-md-8">
                <h3>{{detail.name}}</h3>
                <h4>Strengths: <small>{{detail.strengths}}</small></h4>
                <h4>Weaknesses:
                <small>{{detail.weaknesses}}</small>
                </h4>
                <h4>Likes: <small>{{detail.likes}}</small></h4>
                <h4>Dislikes: <small>{{detail.dislikes}}</small></h4>
                <h4><small>{{detail.description}}</small></h4>
            </div>
        </div>
    </div>
{{/if}}
</div>
    <!--/contain-->

